{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        "src",
    ],
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "./dist/types",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "./src"
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}
