{
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "rootDir": "./src",
        "baseUrl": ".",
        // ESM export related config
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "es6",
        "outDir": "./dist/esm",
        "declaration": true,
        "declarationDir": "./dist/esm"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
